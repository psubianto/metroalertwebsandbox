<!doctype html>
<html lang="en">
<head>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<!-- Bootstrap CSS -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
	<link rel="stylesheet" href="http://kendo.cdn.telerik.com/2016.1.18/styles/kendo.common.min.css" />
	<link rel="stylesheet" href="http://kendo.cdn.telerik.com/2016.1.18/styles/kendo.default.min.css" />

	<title>MetroAlert Web</title>
</head>
<body>
	<nav class="navbar navbar-expand-lg navbar-light bg-light">
		<button class="k-rpanel-toggle"><span class="k-icon k-i-menu"></span></button>
		<a class="navbar-brand" href="#">MetroAlert Web</a>
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarSupportedContent">
			<ul class="navbar-nav mr-auto">
				<li class="nav-item@(this.ViewContext.RouteData.Values["Controller"].ToString() == "Home" && this.ViewContext.RouteData.Values["action"].ToString() == "Index" ? " active" : "")">
				<a class="nav-link" href="@Url.Action("Index", "Home")">Home</a>
				</li>
				<li class="nav-item@(this.ViewContext.RouteData.Values["Controller"].ToString()=="MyCalls" ? " active": "")">
					<a class="nav-link" href="@Url.Action("Index", "MyCalls")">Reminders</a>
				</li>
				<li class="nav-item@(this.ViewContext.RouteData.Values["Controller"].ToString()=="RoleCalls" ? " active": "")">
					<a class="nav-link" href="@Url.Action("Index", "RoleCalls")">Role Calls</a>
				</li>
				<li class="nav-item@(this.ViewContext.RouteData.Values["Controller"].ToString()=="Approvals" ? " active": "")">
					<a class="nav-link" href="@Url.Action("Index", "Approvals")">Approvals</a>
				</li>
				<li class="nav-item dropdown">
					<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
						Me
					</a>
					<div class="dropdown-menu" aria-labelledby="navbarDropdown">
						<a class="dropdown-item" href="#">My Devices</a>
						<a class="dropdown-item" href="#">My Settings</a>
						<div class="dropdown-divider"></div>
						<a class="dropdown-item" href="#">Logout</a>
					</div>
				</li>
				<li class="nav-item@(this.ViewContext.RouteData.Values["Controller"].ToString()=="Home" && this.ViewContext.RouteData.Values["action"].ToString() == "About" ? " active" : "")">
					<a class="nav-link" href="@Url.Action("About", "Home")">About</a>
				</li>

			</ul>
			<form class="form-inline my-2 my-lg-0">
				<input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
				<button class="btn my-2 my-sm-0" type="submit">Search</button>
			</form>
		</div>
	</nav>

	@RenderBody()

	<!-- Optional JavaScript -->
	<!-- jQuery first, then Popper.js, then Bootstrap JS -->
	<script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
	<script src="https://kendo.cdn.telerik.com/2016.1.18/js/kendo.all.min.js"></script>
	<script src="https://kendo.cdn.telerik.com/2016.1.18/js/kendo.aspnetmvc.min.js"></script>

	@Html.Kendo().DeferredScripts()

</body>
</html>
